<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.alura.agenda">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ListaAlunoActivity" android:label="Agenda">
            <intent-filter>
                <!-- Define a activity main -->
                <action android:name="android.intent.action.MAIN" />
                <!-- LAUNCHER Diz qual activity fica disponível para esta aplicação, no caso de chamadas externas ou
                 interropções por conta de ligações. -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FormularioActivity" android:label="Formulário">
        </activity>
    </application>

</manifest>